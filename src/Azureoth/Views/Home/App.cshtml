@model Azureoth.Datastructures.UserApplication

<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a data-toggle="tab" href="#db">Database</a></li>
    <li role="presentation"><a data-toggle="tab" href="#storage">Storage</a></li>
    <li role="presentation"><a data-toggle="tab" href="#auth">Auth</a></li>
    <li role="presentation"><a data-toggle="tab" href="#push">Push</a></li>
    <li role="presentation"><a data-toggle="tab" href="#analysis">Analysis</a></li>
</ul>

<div class="tab-content">
    <div id="db" class="tab-pane fade in active">
        <h3>Database</h3>
        <p>
            <span>API: <a href="//@(Context.Request.Host + "/api/db/" + Model.Title)">@(Context.Request.Host + "/api/db/" + Model.Title)</a></span>
        </p>
        <div class="success alert-success hidden">Database schema updated!</div>
        <div class="alert alert-danger hidden">Something went wrong!</div>
        <div class="margin-t">
            <div id="jsoneditor" style="width: 400px; height: 400px;"></div>
            <a id="submit-schema" class="btn btn-primary btn-sm margin-t" href="#" role="button" data-app-id="@Model.Id">Submit</a>
        </div>
    </div>
    <div id="storage" class="tab-pane fade">
        <h3>Storage</h3>
        <p>
            <span>API: <a href="//@(Context.Request.Host + "/api/storage/" + Model.Title)">@(Context.Request.Host + "/api/storage/" + Model.Title)</a></span>
        </p>
        <div>
        </div>
    </div>
</div>